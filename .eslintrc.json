{
  "plugins": ["spellcheck"],
  "rules": {
    "spellcheck/spell-checker": [
      "warn",
      {
        "comments": true,
        "strings": true,
        "identifiers": true,
        "lang": "en_US",
        "skipWords": ["Lefthook", "Prettier", "npx"],
        "skipIfMatch": ["http://[^s]*", "^[-\\w]+\/[-\\w\\.]+$"],
        "minLength": 3
      }
    ]
  }
}
